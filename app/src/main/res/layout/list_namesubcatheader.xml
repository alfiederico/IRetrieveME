<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/lin_header">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:id="@+id/hsView"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#64B5F6"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtCustomRange"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Calendar"
                    android:textColor="#ffffff"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtCustomRangeSub"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtHome"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Home"
                    android:textColor="#F44336"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtHomeSub"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtReport"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Report"
                    android:textColor="#ffffff"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtReportSub"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtSettle"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Settle"
                    android:textColor="#ffffff"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtSettleSub"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="History"
                    android:textColor="#ffffff"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtHistorySub"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtBuy"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Buy"
                    android:textColor="#ffffff"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtBuySub"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtRedeem"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Redeem"
                    android:textColor="#ffffff"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtRedeemSub"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Setting"
                    android:textColor="#ffffff"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtSettingSub"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtStatistics"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center_horizontal"
                    android:text="Statistics"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txtStatisticsSub"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:layout_weight="1"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/txtLogout"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center_horizontal"
                android:text="Logout"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txtLogoutSub"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:layout_weight="1"/>
            </LinearLayout>




        </LinearLayout>

    </HorizontalScrollView>


</LinearLayout>